{
    "manifest_version": 3,
    "name": "Cookie Manager",
    "version": "1.0",
    "description": "Manage cookies with TOTP support",
    "permissions": [
        "cookies",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "cookies/*.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}